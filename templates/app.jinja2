<!DOCTYPE html>
<html lang="en">
<head>
    <title>newswall</title>
    <meta charset="utf-8">
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <link rel="stylesheet" href="/static/css/app.css">
    <script type="text/javascript" src="/static/js/lib/require.js"></script>
</head>
<body>
    <div id="newswall">
        <header>
            <ul class="tabs scrollbar-primary" id="tabs">
                <li class="tab" id="tab-all">
                    <a class="nav-link active" aria-current="page" href="#">All</a>
                </li>

                <li class="tab" id="tab-query">
                    <a class="nav-link" href="#">Query</a>
                </li>

                <li class="tab" id="tab-log">
                    <a class="nav-link" href="#">Log</a>
                </li>
            </ul>
        </header>

        <main id="query" class="hidden">
            <div class="card">
                <div class="card-content white-text" id="builder-container">

                </div>
                <div class="card-action">
                    <a href="#" id="btn-query" class="btn green">Query</a>
                    <a href="#" id="btn-reset" class="btn red darken-2">Reset</a>

                    <div class="pull-right">
                        <div class="input-field input-field-filter-name">
                            <input placeholder="Name" id="filter_name" type="text">
                            <label for="filter_name">Filter Name</label>
                        </div>
                        <a href="#" id="btn-add-as-filter" class="btn blue">Save As Filter</a>
                    </div>
                </div>
            </div>
        </main>

        <main id="log" class="hidden">
            <div class="card">
                <div class="card-content white-text" id="log-container">

                </div>
            </div>
        </main>

        <main id="wall">
        </main>

        <main id="list" class="collection">
        </main>

        <a class="btn-floating btn-large waves-effect waves-light red" id="btn-change-view"><i class="material-icons">grid_off</i></a>
    </div>

    <script type="text/javascript" src="/static/js/app.js"></script>
</body>
</html>